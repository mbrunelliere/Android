<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gobelins.mbrunelliere.userlogin.Chat.ChatFragment">

    <EditText
        android:id="@+id/chatMessageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/chatSendButton"
        android:ems="10"
        android:hint="@string/chat.message"
        android:inputType="textMultiLine"
        tools:text="@string/chat.message" />

    <Button
        android:id="@+id/chatSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/chat.sendButton" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chatMessageInput"/>

</RelativeLayout>

